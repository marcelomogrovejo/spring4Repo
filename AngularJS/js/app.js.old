'use strict';

// Declare app level module which depends on filters, and services

angular.module("myAngular", [])
	
	.run(["$rootScope", function($rootScope) {
		$rootScope.title = "Hello MyAngular App";
	}])

	.controller("MyController", function($scope) { 
		$scope.entries = [];
	})

	.controller("MyController", ['$scope', '$http', '$routeParams', function($scope, $http, $routeParams) { 
		$http.get("http://localhost:8080/Spring4/data/person/"+$routeParams.id).success(function (data) { 
			$scope.entry = data; 
		}); 
	}]) 

	.config(function($routeProvider) { 
		$routeProvider.when("/", { 
			templateUrl: "/template/list.html", controller: "WorkshopsCtrl as workshops"
		}); 
		$routeProvider.when("/:id", { 
			templateUrl: "/template/show.html", controller: "WorkshopCtrl as workshop" 
		});
	});
